# http://editorconfig.org
root = true

[*]
indent_style = tab
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[readme.txt]
indent_style = space
indent_size = 2
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = true

[{package.json, .eslintrc, *.yml}]
indent_style = space
indent_size = 2

[composer.json, eslintrc.json]
indent_style = tab
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[*.json]
indent_style = tab
indent_size = 4
